<spiderman:View xmlns:spiderman="sap.ui.core.mvc"
                xmlns="sap.m"
                xmlns:f="sap.ui.layout.form"
                xmlns:l="sap.ui.layout"
                controllerName="dorimon.controller.Main">
                
  <App>
    <Page title="Vendor Management Application">
       <f:SimpleForm>
          <f:content>
            <Label text="Company Name"></Label>
            <Input id="idCompany" value="{/vendor/companyName}" width="60%"></Input>
            
            <Label text="Manager Name"></Label>
            <Input id="idManager" value="{/vendor/contactPerson}" width="60%"></Input>
            
            <Label text="Name"></Label>
            <Input id="idFn" value="{/vendor/firstName}"></Input>
            <Input id="idLn" value="{/vendor/lastName}"></Input>
            
            <Label text="Website"></Label>
            <Input id="idWeb" value="{/vendor/website}" width="60%"></Input>
            
            <Label text="Email"></Label>
            <Input id="idEmail" value="{/vendor/email}" width="60%"></Input>
                        
            <Label text="Status"></Label>
            <Input id="idStatus" value="{/vendor/status}" width="60%"></Input>                                    
            
                                    
          </f:content>
       </f:SimpleForm>
       <Table items="{/vendorTab}">
	       <columns>
	         <Column>
	            <header>
		             <Text text="Company Name"></Text>
	            </header>
	         </Column>     
	         <Column>
	            <header>
		             <Text text="Manager Name"></Text>
	            </header>
	         </Column>
	         <Column>
	            <header>
		             <Text text="Person Name"></Text>
	            </header>
	         </Column>
	         <Column>
	            <header>
		             <Text text="Website"></Text>
	            </header>
	         </Column>
	         <Column>
	            <header>
		             <Text text="Email"></Text>
	            </header>
	         </Column>	         	         	         	            
	       </columns>
	       
	       <items>
		       <ColumnListItem>
		        <Text text="{companyName}"></Text>
		        <Text text="{contactPerson}"></Text>
		        <Text text="{firstName} {lastname}"></Text>
		        <Text text="{website}"></Text>
		        <Text text="{email}"></Text>
		       </ColumnListItem>
	       </items>       
       </Table>
       
       <footer>
         <Toolbar>
         <ToolbarSpacer/>
         <Button icon="sap-icon:save" 
                 text="Save"
                 press="onSave"
                 type="Emphasized"
                 >                 
          </Button>
         </Toolbar>
       </footer>
    </Page>
  </App>

</spiderman:View>